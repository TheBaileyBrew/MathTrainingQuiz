<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:id="@+id/vertical_viewBreak"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"/>
    <View
        android:id="@+id/horizontal_viewBreak"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/math_time_trial"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_half_margin"
        android:layout_alignRight="@id/horizontal_viewBreak"
        android:layout_alignBottom="@id/vertical_viewBreak"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:text="RACE THE CLOCK"/>

    <Button
        android:id="@+id/math_pattern_recognition"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_half_margin"
        android:layout_alignLeft="@id/horizontal_viewBreak"
        android:layout_alignBottom="@id/vertical_viewBreak"
        android:textColor="@color/colorPrimaryRed"
        android:textSize="30sp"
        android:text="FIND THE PATTERN"/>

    <Button
        android:id="@+id/math_addition_subtraction"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_half_margin"
        android:layout_alignRight="@id/horizontal_viewBreak"
        android:layout_alignTop="@id/vertical_viewBreak"
        android:textColor="@color/colorPrimaryGreen"
        android:textSize="30sp"
        android:text="ADD OR SUBTRACT"/>

    <Button
        android:id="@+id/math_see_your_scores"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_half_margin"
        android:layout_alignLeft="@id/horizontal_viewBreak"
        android:layout_alignTop="@id/vertical_viewBreak"
        android:textColor="@color/colorPrimaryPurple"
        android:textSize="30sp"
        android:text="SEE YOUR SCORES"/>

</RelativeLayout>